<Window x:Class="CashierApp.PayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CashierApp"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="{DynamicResource MaterialDesignPaper}"
        Title="Оплата" Height="1080" Width="1920" WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" WindowState="Maximized" Icon="/logomak_logo.png">
    <Grid>
        <materialDesign:Card Width="800" Height="800" Padding="8" UniformCornerRadius="6"
                             Background="White" Foreground="Black" 
                             materialDesign:ShadowAssist.ShadowDepth="Depth5" materialDesign:ShadowAssist.ShadowEdges="All" BorderBrush="Black">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Text="Оплата" FontSize="50" FontWeight="Bold"
                           VerticalAlignment="Top" HorizontalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="1" Margin="0,20,0,0">
                    <TextBlock Text="До сплати: " FontSize="50" />
                    <TextBlock x:Name="ToPayTextBlock" Text="200" FontSize="45" Margin="0,5,0,0"/>
                    <TextBlock Text=" грн."  FontSize="45" Margin="5,5,0,0" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="2" Margin="0,20,0,0">
                    <TextBlock Text="Знижка: " FontSize="50" />
                    <TextBlock x:Name="DiscountTextBlock" Text="-20" FontSize="45" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="3">
                    <TextBlock Text="Внесено коштів: " FontSize="50" Margin="0,10,0,0" />
                    <TextBox x:Name="EnteredCashTextBox" Text="500" FontSize="50" Width="300" Height="90"
                             materialDesign:HintAssist.HelperText="Внесено коштів" materialDesign:HintAssist.Hint="Внесено коштів" 
                             HorizontalAlignment="Left" VerticalAlignment="Top"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="4" Margin="0,25,0,0">
                    <Button x:Name="CalculateChangeButton" Content="Рохрахувати здачу" 
                            Width="400" Height="90" FontSize="32" Margin="10"
                            VerticalAlignment="Center" HorizontalAlignment="Center" />
                    <Button x:Name="EnterDiscountButton" Content="Ввести дисконтну картку" 
                            FontSize="32" Width="450" Height="90" Margin="10" />
                    <Button x:Name="GenerateCheckButton" Content="Сформувати чек" 
                            FontSize="32" Width="450" Height="90" Margin="10" />
                </StackPanel>

            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
